<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".PageAcceuil">

    <TextView
        android:id="@+id/Recette"
        android:layout_width="377dp"
        android:layout_height="47dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="17dp"
        android:fontFamily="sans-serif"
        android:text="Marmiton"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#FF9800"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/nomRecette"
        android:background="@drawable/custom_edittext"
        android:layout_width="370dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:shadowColor="#FF9800"
        android:textColorHighlight="#FF9800"
        android:textColorLink="#FF9800"
        app:layout_constraintStart_toStartOf="@+id/TextNomRecette"
        app:layout_constraintTop_toBottomOf="@+id/TextNomRecette" />

    <TextView
        android:id="@+id/TextNomRecette"
        android:layout_width="213dp"
        android:layout_height="24dp"
        android:layout_marginTop="45dp"
        android:text="Name of the recipes :"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#6F6973"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/Recette"
        app:layout_constraintTop_toBottomOf="@+id/Recette" />

    <TextView
        android:id="@+id/TextGenreRecette"
        android:layout_width="210dp"
        android:layout_height="28dp"
        android:layout_marginTop="30dp"
        android:text="The cuisine of the recipes : "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#6F6973"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/nomRecette"
        app:layout_constraintTop_toBottomOf="@+id/nomRecette" />

    <Spinner
        android:id="@+id/spinnerGenreRecette"
        android:background="@drawable/custom_edittext"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/TextGenreRecette"
        app:layout_constraintTop_toBottomOf="@+id/TextGenreRecette" />

    <TextView
        android:id="@+id/TextNombrePersonne"
        android:layout_width="212dp"
        android:layout_height="32dp"
        android:layout_marginTop="30dp"
        android:text="Servings : "
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#6F6973"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/spinnerGenreRecette"
        app:layout_constraintTop_toBottomOf="@+id/spinnerGenreRecette" />

    <Button
        android:id="@+id/buttonRechcercher"
        style="@android:style/Widget.Button"
        android:layout_width="368dp"
        android:layout_height="69dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/custom_button"
        android:text="Search !"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:background="@drawable/custom_edittext"
        android:layout_width="370dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/TextNombrePersonne"
        app:layout_constraintTop_toBottomOf="@+id/TextNombrePersonne" />

</androidx.constraintlayout.widget.ConstraintLayout>